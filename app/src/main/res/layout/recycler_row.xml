<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/recycle_row"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/fruit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_alignBottom="@+id/edit_fruit_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pencil"
        android:id="@+id/edit_fruit_button"
        android:layout_weight="1"
        android:background="@color/cardview_light_background"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/delete_fruit_button"
        android:layout_toStartOf="@+id/delete_fruit_button"
        android:paddingRight="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/garbage"
        android:id="@+id/delete_fruit_button"
        android:layout_marginRight="84dp"
        android:layout_marginEnd="84dp"
        android:background="@color/cardview_light_background"
        android:layout_alignTop="@+id/edit_fruit_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</LinearLayout>
